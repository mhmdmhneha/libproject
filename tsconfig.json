{
  // Base TypeScript configuration for libproject
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",                         // Emit modern JS
    "module": "commonjs",                       // CommonJS modules for Node

    /* JSX Support */
    "jsx": "react-jsx",                         // Enable TSX (React 18+ transform)

    /* Module Resolution */
    "moduleResolution": "node",                 // Resolve imports like Node.js

    /* Vite Requirements */
    "isolatedModules": true,                    // One-file transpilation
    "esModuleInterop": true,                    // Smooth interop with CommonJS

    /* Safety & Strictness */
    "forceConsistentCasingInFileNames": true,   // Prevent casing mismatches
    "strict": true,                             // All strict checks on
    "skipLibCheck": true                        // Skip d.ts type-checking
  },

  // Which files to include in the project
  "include": [
    "src/frontend/**/*",    // your React/TSX files
    "src/backend/**/*"      // your Express/TS files
  ]
}
